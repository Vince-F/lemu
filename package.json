{
  "name": "lemu",
  "version": "1.22.0",
  "private": true,
  "author": "Vincent Francolin",
  "scripts": {
    "serve": "vue-cli-service serve",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "build:all": "npm run build:render && npm run build:main && npm run build:doc",
    "build:doc": "cd ./userGuide && npm run buildAndCopy",
    "build:main": "cd ./mainProcess && tsc",
    "build:render": "vue-cli-service build",
    "build:render:dev": "vue-cli-service build --mode development",
    "dist": "electron-builder",
    "start": "electron .",
    "test:unit:coverage": "vue-cli-service test:unit --coverage --collectCoverageFrom=src/**/*.{ts,tsx,vue}"
  },
  "main": "dist-app/electron-main/main.js",
  "dependencies": {
    "backstopjs": "^5.3.0",
    "custom-electron-titlebar": "^3.2.6",
    "electron-log": "^4.3.2",
    "electron-updater": "^4.3.8",
    "fs-extra": "^9.1.0",
    "v8-compile-cache": "^2.3.0"
  },
  "devDependencies": {
    "@mdi/font": "^5.9.55",
    "@types/jest": "^24.9.1",
    "@types/marked": "^2.0.1",
    "@vue/cli-plugin-babel": "^4.5.12",
    "@vue/cli-plugin-typescript": "^4.5.12",
    "@vue/cli-plugin-unit-jest": "^4.5.12",
    "@vue/cli-service": "^4.5.12",
    "@vue/test-utils": "^1.1.1",
    "axios": "^0.21.1",
    "core-js": "^3.10.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "marked": "^2.0.1",
    "minisearch": "^3.0.2",
    "monaco-editor-vue": "^1.0.10",
    "monaco-editor-webpack-plugin": "^1.8.2",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "typescript": "~4.1.5",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-cli-plugin-vuetify": "^2.3.1",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.1",
    "vue-template-compiler": "^2.6.12",
    "vuetify": "^2.4.9",
    "vuetify-loader": "^1.7.2",
    "vuex": "^3.6.2",
    "vuex-class": "^0.3.2",
    "vuex-module-decorators": "^1.0.1"
  },
  "build": {
    "appId": "lemu",
    "productName": "lemu",
    "publish": [
      "github"
    ],
    "files": [
      "shared/**/*.js",
      "dist-app/**/*",
      "userGuide/docs/.vuepress/dist/*",
      "icon.png",
      "package.json"
    ]
  },
  "license": "AGPL-3.0"
}
